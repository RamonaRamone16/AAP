@model ProjectA.Models.Models.Role.EditRoleModel
@{
    ViewData["Title"] = "Edit role";
}


<form method="post">

    <div class="card">
        <div class="card-header">
            <h3>Пользователи с данной ролью</h3>
        </div>
        <div class="card-body">
            @{
                if (Model.Users.Any())
                {
                    foreach (var user in Model.Users)
                    {
                        <h5 class="card-title">@user</h5>
                    }
                }
                else
                {
                    <h5 class="card-title">Нет пользователей с данной ролью</h5>
                }
            }
        </div>
        <div class="card-footer">
            <a asp-action="EditUsersInRole" asp-route-Id="@Model.Id" class="btn btn-primary">Управление пользователями</a>
        </div>
    </div>

</form>